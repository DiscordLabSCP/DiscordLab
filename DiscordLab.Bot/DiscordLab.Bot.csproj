<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net48</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>13</LangVersion>
        <Nullable>enable</Nullable>
        <PlatformTarget>x64</PlatformTarget>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Version>2.0.0</Version>
    </PropertyGroup>

    <PropertyGroup>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>LumiFae</Authors>
        <Title>DiscordLab</Title>
        <Description>A modular Discord bot for SCP:SL servers running LabAPI</Description>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/DiscordLabSCP/DiscordLab</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <PropertyGroup>
        <CodeAnalysisRuleSet>../stylecop.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="Assembly-CSharp-firstpass" HintPath="$(SL_REFERENCES)\Assembly-CSharp-firstpass.dll" Private="false"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Discord.Net.WebSocket" Version="3.17.4" PrivateAssets="none" IncludeAssets="all"/>
        <PackageReference Include="Discord.Net.Rest" Version="3.17.4" PrivateAssets="none" IncludeAssets="all"/>
        <PackageReference Include="Lib.Harmony" Version="2.2.2"/>
        <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.556" IncludeAssets="all" PrivateAssets="all"/>
        <PackageReference Include="System.Net.Http" Version="4.3.4"/>
        <PackageReference Include="System.Text.Json" Version="9.0.6"/>
    </ItemGroup>

    <PropertyGroup>
        <DependencyPath>$(MSBuildThisFileDirectory)..\bin\dependencies\</DependencyPath>
    </PropertyGroup>

    <Target Name="CopyDependencies" AfterTargets="Build">
        <ItemGroup>
            <DependenciesToCopy Include="$(OutputPath)0Harmony.dll"/>
            <DependenciesToCopy Include="$(OutputPath)Discord.Net.*.dll"/>
            <DependenciesToCopy Include="$(OutputPath)Newtonsoft.Json.dll"/>
            <DependenciesToCopy Include="$(OutputPath)System.ValueTuple.dll"/>
        </ItemGroup>

        <Copy SourceFiles="@(DependenciesToCopy)"
              DestinationFolder="$(DependencyPath)"
              SkipUnchangedFiles="true"/>
    </Target>
</Project>